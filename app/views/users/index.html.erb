  <div class="container">
        <div class="jumbotron">
          <div class="card">
        <div class="card-header">
          Tabela para Administração
        </div>
        <div class="card-body">
          <h5 class="card-title">USUÁRIOS</h5>
          <table class="table table-white table-hover table-bordered">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Nome de Usuário</th>
                  <th scope="col">Email</th>
                  <th scope="col">AÇÕES</th>
                </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th><%= user.id %></th>
                  <td><%= user.name %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td class="text-right">
                  <%= link_to edit_user_path(user) do %>
                      <button class="btn btn-primary rounded-pill" style="width: 100px;" >EDITAR</button>
                  <% end %>
                  <%= link_to user, method: :delete do %>
                      <button class="btn btn-danger rounded-pill" style="width: 100px;">EXCLUIR</button>
                  <% end %>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>